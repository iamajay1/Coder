			   <td> <button type="submit" class="btn btn-primary">Search</button> </td>
			</tr>
			</table>
			</div>
		<b>Last 5 Searches </b>
			
			<% if(search){ 
				var j=0;
			%>
         
                     <% for(var i=search.length-1;i>=0;i--){ 
						%>
							
						 <p> <%= search[i].sText %> </p> 
						<%
						j++;
						if(j==5){
							break;
						}
						
					 %>
            
				            
          
            <% } %>

         
          <% } else { %>
